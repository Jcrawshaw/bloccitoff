<div class="jumbotron">
<h1>My To-Do List</h1>
</div>
<div class="col-md-6">
<table class="table table-striped">
  <thead>
    <tr>
      <th>Task</th>
      <th>Description</th>
      <th>Complete?<th>
      <th colspan="6"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.description %></td>
        <td><%= check_box_tag [] %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Remove task from To-do list?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="col-md-4">
<%= link_to 'New Task', new_todo_path, class: 'btn btn-primary' %>
</div>