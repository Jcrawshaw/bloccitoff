  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, rows: 4, class: 'form-control', placeholder: "Enter To-Do List description" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
</div>